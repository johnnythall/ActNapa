    <div class="controls">
      <%= f.text_field :student, :class => 'form-control' %>
    </div>
    <%= error_span(@actor[:student]) %>
  </div>
  <div class="control-group">
    <%= f.label :expected_grad, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :expected_grad, :class => 'form-control' %>
    </div>
    <%= error_span(@actor[:expected_grad]) %>
