  <div class="control-group">
    <%= f.label :age_max, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :age_max, :class => 'form-control' %>
    </div>
    <%= error_span(@actor[:age_max]) %>
  </div>
  <div class="control-group">
    <%= f.label :hair_color, :class => 'control-label' %>
