<%- model_class = Actor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:sex_id) %></th>
      <th><%= model_class.human_attribute_name(:ethnicity_id) %></th>
      <th><%= model_class.human_attribute_name(:website) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td><%= link_to actor.id, actor_path(actor) %></td>
        <td><%= actor.first_name %></td>
        <td><%= actor.last_name %></td>
        <td><%= if actor.sex_id == 0
				 	'Male'
				elsif actor.sex_id = 1
					'Female'
				else
					'Other' 
				end %></td>
        <td><%= actor.ethnicity_id %></td>
        <td><%= actor.website %></td>

        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_actor_path(actor), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      actor_path(actor),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_actor_path,
            :class => 'btn btn-primary' %>

