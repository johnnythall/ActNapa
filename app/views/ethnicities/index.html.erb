<h1>Listing ethnicities</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ethnicities.each do |ethnicity| %>
      <tr>
        <td><%= ethnicity.title %></td>
        <td><%= ethnicity.description %></td>
        <td><%= link_to 'Show', ethnicity %></td>
        <td><%= link_to 'Edit', edit_ethnicity_path(ethnicity) %></td>
        <td><%= link_to 'Destroy', ethnicity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

